<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.mapper.LgProductInfoMapper">

    <!-- 开启二级缓存 -->
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.shop.entity.LgProductInfo">
        <id column="id" property="id" />
        <result column="product_name" property="productName" />
        <result column="product_id" property="productId" />
        <result column="product_number" property="productNumber" />
        <result column="category_id" property="categoryId" />
        <result column="click_num" property="clickNum" />
        <result column="base_collect_num" property="baseCollectNum" />
        <result column="inventory_num" property="inventoryNum" />
        <result column="market_price" property="marketPrice" />
        <result column="sale_price" property="salePrice" />
        <result column="introduce" property="introduce" />
        <result column="description" property="description" />
        <result column="small_pic" property="smallPic" />
        <result column="original_pic" property="originalPic" />
        <result column="big_pic" property="bigPic" />
        <result column="is_putaway" property="isPutaway" />
        <result column="update_time" property="updateTime" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, product_name, product_id, product_number, category_id, click_num, base_collect_num, inventory_num, market_price, sale_price, introduce, description, small_pic, original_pic, big_pic, is_putaway, update_time, create_time
    </sql>

</mapper>
